@model List<ApplicationUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
 

<form asp-controller="Cources" asp-action="SearchStudent"  class="form-group row"> 
    <div class="col-sm-10">
      <input type="text" class="form-control" placeholder="User Information" name="SearchString" />
      <input type="hidden" class="form-control"  name="Id" value="" />
    </div>
    <input type="submit" class="col-sm-2 btn btn-primary" value="Search" /> 
</form>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Student ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th> 
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
        <tr>
            <td>@user.StudentId</td>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>@user.Email</td> 
            <td>
                <a class="btn btn-primary" asp-controller="Cources" asp-action="AddUserToCource" asp-route-userId="@user.Id">Add Student</a>
            </td>
        </tr>
        }
    </tbody>
</table>